<Window x:Class="WpfApp2.GridDefinition"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GridDefinition" Height="500" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.66*"/>
            <ColumnDefinition Width="0.34*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Column="0" Grid.Row="0" Background="Red"></Grid>
        <Grid Grid.Column="1" Grid.Row="0" Background="Yellow"></Grid>
        <Grid Grid.ColumnSpan="2" Grid.Row="1" Background="Blue"></Grid>
        <Grid Grid.ColumnSpan="2" Grid.Row="2" Background="Green"></Grid>
        <Grid Grid.ColumnSpan="2" Grid.Row="3" Background="Black"></Grid>
    </Grid>
</Window>
