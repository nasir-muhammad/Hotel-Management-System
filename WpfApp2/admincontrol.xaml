                    </Grid>
                    <Grid Grid.ColumnSpan="2" Grid.Row="12">
                        <Button Content="Add Doctor" Width="250" Height="30" VerticalAlignment="Top" Margin="0,10,0,0" Background="#FF595CA4" Click="AddDoctor_Btn_Click"/>
