                    </Grid>
                    <Grid Grid.Column="1" Grid.Row="1">
                        <PasswordBox x:Name="passwordbox_update" Width="270" Height="30" HorizontalAlignment="Right"/>
                    </Grid>
                    <Grid Grid.Column="0" Grid.Row="2">
